<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.maciej_nowak.lwk.Presentation"
    tools:showIn="@layout/activity_presentation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/imageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"/>

        <Button
            android:id="@+id/imageRecognize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECOGNIZE"/>

        <ImageView
            android:id="@+id/imageOriginal"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORIGINAL" />

        <TextView
            android:id="@+id/textSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="STEPS:"/>

        <ImageView
            android:id="@+id/imageGrayScale"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textGrayScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. GRAY SCALE" />

        <ImageView
            android:id="@+id/imageGaussBlur"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textGaussBlur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. GAUSSIAN BLUR" />

        <ImageView
            android:id="@+id/imageSobel"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textSobel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. SOBEL" />


        <ImageView
            android:id="@+id/imageAdaptiveThreshold"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textAdaptiveThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. ADAPTIVE THRESHOLD" />

        <ImageView
            android:id="@+id/imageAdaptiveThresholdCrop"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textAdaptiveThresholdCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. ADAPTIVE THRESHOLD CROP" />

        <ImageView
            android:id="@+id/imageMorphology"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textMorphology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. MORPHOLOGY" />

        <ImageView
            android:id="@+id/imageContours"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textContours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. CONTOURS" />

        <ImageView
            android:id="@+id/imageRectangle"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textRectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.RECTANGLE" />

        <ImageView
            android:id="@+id/imagePlate"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textPlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. PLATE" />

        <TextView
            android:id="@+id/textOCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. OCR (TESSERACT)"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
