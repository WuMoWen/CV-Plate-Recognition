<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.maciej_nowak.lwk.LWK3"
    tools:showIn="@layout/activity_lwk3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageOriginal"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image ORIGINAL" />

        <ImageView
            android:id="@+id/imageGauss"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textGauss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE GAUSSIAN BLUR" />

        <ImageView
            android:id="@+id/imageScaled"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textScaled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE SCALED" />

        <ImageView
            android:id="@+id/imageThreshold"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE THRESHOLD" />

        <ImageView
            android:id="@+id/imageTransformed"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textTransformed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE TRANSFORMED" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>