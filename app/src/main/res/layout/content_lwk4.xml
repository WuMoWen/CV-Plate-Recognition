<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.maciej_nowak.lwk.LWK4"
    tools:showIn="@layout/activity_lwk4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageOriginal"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image ORIGINAL" />

        <ImageView
            android:id="@+id/imageEroded"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textEroded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE ERODED" />

        <ImageView
            android:id="@+id/imageDilated"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textDilated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE DILATED" />

        <ImageView
            android:id="@+id/imageHistogramCalculated"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textHistogramCalculated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE HISTOGRAM CALCULATED" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
